@using TravelTripProject.Models.Classes
@model List<Blog>

<div class="padding1">
    <h4>En Beğenilen Yerler</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <a href="/Blog/Index/@item.ID"><img src="@item.BlogImage"style="width:120px;height:65px" alt=""  />  </a>
            </div>
            <div class="bot-desc">
                <p>@item.Aciklama.Substring(0, 76) ... </p>
            </div>
            <div class="clear"></div>
        }



    </div>
    <div class="box1-left">
        @foreach (var item in Model)
        {
            <div class="bot-img">
                <a href="/Blog/Index/@item.ID"><img src="@item.BlogImage" style="width:120px;height:65px" alt="" />  </a>
            </div>
            <div class="bot-desc">
                <p>@item.Aciklama.Substring(0, 76) ... </p>
            </div>
            <div class="clear"></div>
        }
    </div>
</div>
